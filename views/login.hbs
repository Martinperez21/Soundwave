  </nav>
  <div class="container-fluid text-center text-white bk-login ">
    <div class="row vh-100 align-items-center justify-content-center">
      <div class="color-principal rounded p-5 col-sm-9 col-md-6 col-lg-4">
        <img src="./img/SoundWave_logo_2.png" width="30%" height="auto" class="img-fluid mb-2">
        <form action="/login" method="post">
          <div class="mb-1">
            <label for="Email" class="form-label lead">Nombre de usuario</label>
            <div class="row">
              <div class="col-md-2">
              </div>
              <div class="col-md-8">
                <input type="text" class="form-control rounded-3 ps-1 mb-3 text-center" name="username" id="username"
                  aria-describedby="usernameHelp">
              </div>
              <div class="col-md-2">
              </div>
            </div>
          </div>
          <div class="mb-3 ">
            <label for="Password" class="form-label lead">Contraseña</label>
            <div class="row">
              <div class="col-md-2"></div>
              <div class="col-md-8">
                <input type="password" class="form-control rounded-3 ps-1 text-center" name="password" id="password">
              </div>
              <div class="col-md-2"></div>
            </div>
          </div>

          <div class="">
            <button type="submit" class="btn btn-warning mb-3">
              <a class="nav-link link-dark">Ingresar!</a>
            </button>
          </div>

          <button type="button" class="btn btn-warning mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Primera vez? Registrate acá!
          </button>
          <br>
          <a href="/" class="link-light">volver</a>
        </form>
      </div>
    </div>
  </div>
  <!-- Modal Register -->
  <div class="modal fade" id="exampleModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content p-3 mt-2 bg-dark text-white">
        <div class="modal-header text-center justify-content-center  mb-3">
          <h5 class="modal-title text-center lead fs-4" id="exampleModalLabel">Crea tus mezclas registrandote </h5>
        </div>
        <div class="model-body">

        </div>
        <form action="/register" method="POST">
          <div class="row g-3 mb-3">
            <div class="col-md-6">
              <label for="validationDefault01" class="form-label"> <em>Nombre de Usuario</em> </label>
              <input type="text" class="form-control" id="username" name="username" required/>
            </div>
            <div class="col-md-6">
              <label class="form-label">Contraseña</label>
              <input type="password" class="form-control" id="password" name="password" required/>
            </div>
          </div>

          <div class="row g-3">
            <button class="btn btn-warning" type="submit">Registrarse</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
